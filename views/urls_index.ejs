<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" href="styles/main.css">
</head>
<body>
<%- include('partials/_header') %>
  <div class="FullPageContainer text-center">
  <h1>Currently Indexed URLs</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Shortened</th>
        <th>Original</th>
      </tr>
    </thead>
    <tbody>
      <% for (let url in urls) { %>
        <tr>
          <td><%= url %></td>
          <td><a href="<%= urls[url] %>"><%= urls[url] %></a></td>
          <td>
            <form method="GET" action="/urls/<%= url %>">
              <button class="btn btn-default" type="submit">Edit <span class="glyphicon glyphicon-pencil"></span></button>
            </form>

          </td>
          <td>
            <form method="POST" action="/urls/<%= url %>/delete">
                <button class="btn btn-default" type="submit">Delete <span class="glyphicon glyphicon-trash"></span></button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
  </div>
</body>
</html>
