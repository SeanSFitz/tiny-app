  <div class="FullPageContainer">
  <h1 class="text-center">Login</h1>
  <form action="/login" method="POST">
    <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" name="email" placeholder="Email">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>

  <% if (invalid) { %>
  <div class="text-center" style="margin-bottom: 10pt; color: red;">Invalid e-mail or password.</div>
  <% } %>

  <div class="text-center"><button type="submit" class="btn btn-default">Login</button>
  <div style="margin:10pt"><a href="/register">Not a member? Register here... </a><div></div></div>
  </div>
  </form>
  </div>
